<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="0dp"
    android:background="@drawable/ppt"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"  >
    
    <TextView
        android:id="@+id/tv_title"
        style="@style/Smile.TextView._Black"       
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/tv_photo"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/pinglun"
        android:drawableRight="@drawable/tx"
        android:drawablePadding="14dp"
        android:paddingBottom="7dp"
        android:paddingLeft="20dp"
        android:paddingRight="7dp"
        android:paddingTop="7dp"
        android:singleLine="true"
        android:text="红色钱包"
        android:textSize="16sp" 
        android:textColor="#ffffff">

    </TextView>
<ImageView 
	    android:id="@+id/content_image"
	     android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scaleType="centerInside"
	    android:adjustViewBounds="true"
	    android:layout_below="@id/tv_title"
	    android:layout_centerHorizontal="true"
	    android:layout_marginLeft="4dip"
	    android:layout_marginRight="4dip"
	    android:visibility="visible"
	    android:paddingTop="8dp"
	    android:paddingBottom="8dp"
       
	   />
    
    <TextView
        android:id="@+id/tv_describe"
        android:layout_margin="4dp"
        android:text="十年之前，我不认识你 你不属于我，我们还是一样，陪在一个陌生人左右，走过渐渐熟悉的街头;十年之后，我们是朋友， 还可以问候，只是那种温柔，再也找不到拥抱的理由，情人最后难免沦为朋友。"
        style="@style/TextTheme"
        android:layout_below="@id/content_image" 
        
         >
    </TextView>


    <TextView
        android:id="@+id/tv_time"
        android:layout_marginTop="10dp"
        android:text="20130240122"
        style="@style/Smile.TextView._Gray"
        android:textSize="12sp"
        android:layout_below="@id/tv_describe" >
    </TextView>

	 <TextView
        android:id="@+id/item_action_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_describe"
        android:drawableLeft="@drawable/ic_action_comment"
        android:gravity="center"
        android:text="评论"
        android:textColor="#888888" />

	<ImageView
	    android:id="@+id/head_image"
	    android:layout_width="36dp"
	    android:layout_height="36dp"
	    android:layout_alignLeft="@+id/tv_describe"
	    android:layout_alignTop="@+id/tv_title"
	    android:scaleType="centerInside"
	    android:src="@drawable/touxiang"
	    android:visibility="visible" />

	
	
</RelativeLayout>