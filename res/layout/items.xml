<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="8dp"
    android:background="@drawable/background_with_shadow"
    android:orientation="vertical" 
    android:descendantFocusability="blocksDescendants" >
    
    <TextView
        android:id="@+id/author"
        style="@style/Smile.TextView._Black"       
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/tv_photo"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg"
        
        android:drawablePadding="14dp"
        android:paddingBottom="7dp"
        android:paddingLeft="20dp"
        android:paddingRight="7dp"
        android:paddingTop="7dp"
        android:singleLine="true"
        android:text="红色钱包"
        android:textSize="16sp" 
        android:textColor="#0099cc">

    </TextView>
    

	<ImageView
	    android:id="@+id/head_image"
	    android:layout_width="36dp"
	    android:layout_height="36dp"
	    android:layout_alignLeft="@+id/tv_describe"
	    android:layout_alignTop="@+id/author"
	    android:scaleType="centerInside"
	    android:src="@drawable/touxiang"
	    android:visibility="visible" />

	<ImageView
	    android:id="@+id/content_image"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/head_image"
	    android:layout_centerHorizontal="true"
	    android:adjustViewBounds="true"
	    android:scaleType ="centerCrop"
	    android:paddingBottom="8dp"
	    android:paddingTop="8dp"	    
	    android:visibility="visible" />
    <ImageView 
		android:id="@+id/video_play_btn"
		android:layout_width="42dp"
		android:layout_height="42dp"
		android:layout_centerInParent="true"
		android:background="@drawable/ic_play_video"
		android:contentDescription="this is a button and play a video"
		/>

	<TextView
	    android:id="@+id/tv_title"
	    style="@style/Smile.TextView._Gray"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/content_image"
	    android:maxLines="2"
	    android:minLines="1"
	    android:text="主题"
	    android:textColor="#0099cc"
	    android:textSize="16sp" />
	
    	<TextView
        android:id="@+id/tv_describe"
        android:layout_marginTop="4dp"
        android:text="周三早上丢失了红色钱包，在食堂二楼"
        style="@style/Smile.TextView._Gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title" 
        android:minLines="1"
        android:maxLines="2"
        android:textSize="14sp"
         >
    </TextView>
    <TextView
        android:id="@+id/tv_time"
        android:layout_marginTop="14dp"
        android:text="20130240122"
        style="@style/Smile.TextView._Gray"
        android:textSize="12sp"
        android:layout_below="@id/tv_describe" >
    </TextView>
     <TextView
        android:id="@+id/item_action_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_describe"
        android:drawableLeft="@drawable/ic_action_comment"
        android:gravity="center"
        android:text="评论"
        android:textColor="#888888" />
</RelativeLayout>
