<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:padding="16dp"
    android:background="#F7F7F7">

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <TextView
            android:id="@+id/userName_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"        
            android:textSize="16sp"
            android:textColor="@color/theme_color"
            android:text = "userName"
            />
        <TextView
            android:id="@+id/index_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "1楼"
            android:gravity="center"
            android:textColor="#888888"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true"
			android:background="@drawable/bg_comment_floor"
            />
    </RelativeLayout>
<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/user_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user_icon_default_main" />

	<TextView
	    android:id="@+id/content_comment"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_toRightOf="@+id/user_logo"
	    android:text="评论"
	    android:textColor="#222222"
	    android:textSize="14sp"
	    android:layout_marginLeft="4dp" />

	</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_time1"
        style="@style/Smile.TextView._Gray"
        android:layout_marginTop="16dp"
        android:layout_centerVertical="true"
        android:text="20130240122"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/delete1"
        style="@style/Smile.TextView._Gray"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:text="删除 "
        android:textColor="#0099cc"
        android:textSize="10sp" />
    
	</RelativeLayout>
</LinearLayout>