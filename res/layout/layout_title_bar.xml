<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaffffff" >
    
   
<RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#339966"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >
    <ImageView
        android:id="@+id/title_bar_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3.0dip"
        android:layout_marginRight="3.0dip"
        android:layout_marginTop="3.0dip"
        android:gravity="center"
        android:src="@drawable/ic_top_bar_category" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/title_bar_menu_btn"
        android:background="@drawable/ic_top_divider" />

    <TextView
        android:id="@+id/title_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/title_bar_menu_btn"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="75.0dip"
        android:paddingRight="75.0dip"
        android:singleLine="true"
        android:text="❤ 悦 图 "
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/title_bar_name"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:src="@drawable/dongman" />

  </RelativeLayout>

 <RelativeLayout
     android:id="@+id/center"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_below="@+id/topbar"
     android:layout_weight="1"
     android:background="@drawable/ym"
     android:gravity="left" >

     <LinearLayout
         android:id="@+id/llAdvertiseBoard"
         android:layout_width="match_parent"
         android:layout_height="188dip"
         android:layout_marginTop="1dp"
         android:orientation="vertical"
         android:background="@drawable/ic_launcher" >
     </LinearLayout>

     <Button
         android:id="@+id/Button01"
         android:layout_width="120dp"
         android:layout_height="70dp"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/llAdvertiseBoard"
         android:layout_marginTop="2dp"
          android:text="影   视"
         android:textColor="#ffffff"
         android:textSize="24dp"
         android:alpha="1"
         android:background="@drawable/sheying"
         />

     <Button
         android:id="@+id/btnSelectImage"
         android:layout_width="160dp"
         android:layout_height="60dp"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/hangwu"
         android:layout_toLeftOf="@+id/youmou"
         android:alpha="1"
         android:background="@drawable/ym3"
         android:text="二次元"
         android:textColor="#ffffff"
         android:textSize="24dp" />

     <Button
         android:id="@+id/Button02"
         android:layout_width="160dp"
         android:layout_height="70dp"
         android:layout_alignBaseline="@+id/Button01"
         android:layout_alignBottom="@+id/Button01"
         android:layout_alignParentRight="true"
         android:layout_toRightOf="@+id/Button01"
         android:alpha="1"
         android:background="@drawable/keji2"
         android:text="科   技"
         android:textColor="#ffffff"
         android:textSize="24dp" />

     <Button
         android:id="@+id/hangwu"
         android:layout_width="160dp"
         android:layout_height="90dp"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/Button01"
         android:alpha="1"
         android:background="@drawable/junshi"
         android:text="航   武"
         android:textColor="#ffffff"
         android:textSize="24dp" />

     <Button
         android:id="@+id/youmou"
         android:layout_width="160dp"
         android:layout_height="60dp"
         android:layout_alignLeft="@+id/btnDownloadImage"
         android:layout_alignParentBottom="true"
         android:layout_alignParentRight="true"
         android:alpha="1"
         android:background="@drawable/youmo5"
         android:text="幽   默"
         android:textColor="#ffffff"
         android:textSize="24dp" />

     <Button
         android:id="@+id/btnDownloadImage"
         android:layout_width="160dp"
         android:layout_height="50dp"
         android:layout_above="@+id/youmou"
         android:layout_alignParentRight="true"
         android:layout_alignTop="@+id/btnSelectImage"
         android:alpha="1"
         android:background="@drawable/tuzhai10"
         android:text="时   事"
         android:textColor="#ffffff"
         android:textSize="24dp" />

 </RelativeLayout>
 	
</RelativeLayout>