<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xz"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="2dp"
    android:background="@drawable/background_with_shadow"
    android:orientation="vertical" 
    android:descendantFocusability="blocksDescendants" >
    
    <TextView
        android:id="@+id/author"
        style="@style/Smile.TextView._Black"       
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/tv_photo"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/pinglun"
        android:drawableRight="@drawable/tx"
        android:drawablePadding="14dp"
        android:paddingBottom="7dp"
        android:paddingLeft="20dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="红色钱包"
        android:textSize="16sp" 
        android:textColor="#ffffff"
        android:visibility="gone">

    </TextView>
    

	<ImageView
	    android:id="@+id/head_image"
	    android:layout_width="36dp"
	    android:layout_height="36dp"
	    android:layout_alignTop="@+id/author"
	    android:scaleType="centerInside"
	    android:src="@drawable/touxiang"
	    android:visibility="gone" />
<RelativeLayout   
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
    >
    	<TextView
    	    android:id="@+id/tv_describe"
    	    style="@style/Smile.TextView._Gray"
    	    android:layout_width="180dp"
    	    android:layout_height="wrap_content"
    	    android:layout_alignBottom="@+id/content_image"
    	    android:layout_alignLeft="@+id/tv_title"
    	    android:layout_below="@id/tv_title"
    	    android:layout_marginTop="0dp"
    	    android:maxLines="2"
    	    android:minLines="1"
    	    android:text="周三早上丢失了红色钱包"
    	    android:textSize="12sp"
    	     >

    </TextView>
    <TextView
        android:id="@+id/tv_time"
        android:layout_marginTop="14dp"
        android:text="20130240122"
        style="@style/Smile.TextView._Gray"
        android:textSize="12sp"
        android:layout_below="@id/tv_describe" 
        android:visibility="gone">
    </TextView>

    <ImageView
        android:id="@+id/content_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="#ffffff"
       
        android:scaleType="centerInside"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/Smile.TextView._Gray"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/content_image"
        android:maxLines="1"
        android:minLines="1"
        android:text="主题"
        android:textColor="#0099cc"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/xiazai"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/tv_title"
        android:background="@drawable/chat_send_btn_normal"
        android:text="下 载"
        android:textColor="#ffffff"
        android:textSize="16dp" 
        android:gravity="center"/>

    </RelativeLayout>
     <TextView
        android:id="@+id/item_action_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"       
        android:drawableLeft="@drawable/ic_action_comment"
        android:gravity="center"
        android:text="评论"
        android:textColor="#888888"
        android:visibility="gone" />

     

</RelativeLayout>
