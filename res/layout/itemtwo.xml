<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="#eeeeee"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="150dp"
        android:layout_height="240dp"
        android:layout_weight="1"
        android:background="@drawable/biji"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_title"
            style="@style/Smile.TextView._Black"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignBottom="@+id/tv_photo"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:drawablePadding="14dp"
            android:paddingBottom="7dp"
            android:paddingLeft="20dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:singleLine="true"
            android:text="红色钱包"
            android:textColor="#D95555"
            android:textSize="16sp" >
        </TextView>

        <ImageView
            android:id="@+id/content_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:adjustViewBounds="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:scaleType="centerInside"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_describe"
            style="@style/TextTheme"
            android:layout_below="@id/content_image"
            android:layout_margin="4dp"
            android:text="十年之前，我不认识你 你不属于我，我们还是一样，陪在一个陌生人左右，走过渐渐熟悉的街头;十年之后，我们是朋友， 还可以问候，只是那种温柔，再也找不到拥抱的理由，情人最后难免沦为朋友。" >
        </TextView>

        <TextView
            android:id="@+id/tv_time"
            style="@style/Smile.TextView._Gray"
            android:layout_below="@id/tv_describe"
            android:layout_marginTop="10dp"
            android:text="20130240122"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/item_action_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_describe"
            android:drawableLeft="@drawable/ic_action_comment"
            android:gravity="center"
            android:text="评论"
            android:textColor="#888888" />

        <ImageView
            android:id="@+id/head_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignLeft="@+id/tv_describe"
            android:layout_alignTop="@+id/tv_title"
            android:scaleType="centerInside"
            android:src="@drawable/touxiang"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="240dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/relativeLayout1"
        android:layout_weight="1"
        android:background="@drawable/biji"
        android:gravity="center" >

        <TextView
            android:id="@+id/TextView03"
            style="@style/Smile.TextView._Black"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignBottom="@+id/tv_photo"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:drawablePadding="14dp"
            android:paddingBottom="7dp"
            android:paddingLeft="20dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp"
            android:singleLine="true"
            android:text="红色钱包"
            android:textColor="#D95555"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView03"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:adjustViewBounds="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:scaleType="centerInside"
            android:visibility="visible" />

        <TextView
            android:id="@+id/TextView02"
            style="@style/TextTheme"
            android:layout_below="@+id/ImageView01"
            android:layout_margin="4dp"
            android:text="十年之前，我不认识你 你不属于我，我们还是一样，陪在一个陌生人左右，走过渐渐熟悉的街头;十年之后，我们是朋友， 还可以问候，只是那种温柔，再也找不到拥抱的理由，情人最后难免沦为朋友。" />

        <TextView
            android:id="@+id/TextView01"
            style="@style/Smile.TextView._Gray"
            android:layout_below="@+id/TextView02"
            android:layout_marginTop="10dp"
            android:text="20130240122"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TextView02"
            android:drawableLeft="@drawable/ic_action_comment"
            android:gravity="center"
            android:text="评论"
            android:textColor="#888888" />

        <ImageView
            android:id="@+id/ImageView02"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignLeft="@+id/TextView02"
            android:layout_alignTop="@+id/TextView03"
            android:scaleType="centerInside"
            android:src="@drawable/touxiang"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>